---
import type { CollectionEntry } from "astro:content";
import Card from "../ui/Card.astro";

const { article } = Astro.props;

interface Props {
  article: CollectionEntry<"blog">;
}
---

<Card isUnderline={true}>
  <article class="p-6 relative">
    <div class="flex justify-between items-center mb-5 text-gray-500">
      <h2
        class="bg-green text-black text-xl font-medium inline-flex items-center px-2.5 py-0.5 rounded"
      >
        {article.data.title}
      </h2>
    </div>

    <p
      class="px-2.5 mb-5 font-light text-sm text-gray-500 w-4/5"
      style="white-space:pre-line"
    >
      {article.data.summary}
    </p>
    <div class="absolute bottom-3 right-3 flex items-center">
      <img
        class="w-24 h-auto"
        src={"/themes/" + article.data.authImage + ".png"}
        alt={article.data.author + " cover"}
      />
    </div>
