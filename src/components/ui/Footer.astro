---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Twitter from "../../assets/twitter.svg";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];

const links = [
  { name: "À propos", href: "" },
  { name: "Services", href: "#services" },
  { name: "Thèmes", href: "#cases" },
  //{ name: "Pricing", href: "#Testimonials" },
  //{ name: "Blog", href: "#Home" },
];
---

<section id="contact" class="px-5 bg-white relative">
  <div class="w-full">
    <div
      class="px-[15px] text-dark py-[55px] lg:px-[60px] rounded-t-[45px]"
      style={{
        "background-color": "#fdf7ff",
      }}
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <img
                src={"/projet-gb/logo_artesemys.png"}
                alt="Hero Ilustration"
                loading="lazy"
                class="pb-5 h-20"
              />
            </a>
          </picture>
          <ul class="flex flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center text-dark">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[1.75rem] lg:mt-[66px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-dark">
              Nous contacter
            </h3>
            <div class="flex flex-col justify-between">
              <span> Email: artesemys@gmail.com </span>
              <span> Phone: +33 6 00 00 00 00 </span>
              <span class="lg:w-3/4">
                Address: 1234 Street Name, City Name, Country Name
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
