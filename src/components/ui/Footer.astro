---

<section id="contact" class="px-5 bg-white relative">
  <div class="w-full">
    <div
      class="px-[15px] text-dark py-[55px] lg:px-[60px] rounded-t-[45px]"
      style={{
        "background-color": "#fdf7ff",
      }}
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <img
                src={"/projet-gb/gb-black.png"}
                alt="Hero Ilustration"
                loading="eager"
                class="pb-5 h-20"
              />
            </a>
          </picture>
          <ul class="flex flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center text-dark">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <div class="flex text-center lg:text-start flex-col">
            <h3 class="text-center font-bold md:text-left text-2xl text-dark">
              Me contacter
            </h3>
            <div class="flex flex-col">
              <span> <strong>Email:</strong> gaetanbros.pro@gmail.com </span>
              <span> <strong>Téléphone:</strong> +33 6 63 05 92 01 </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
