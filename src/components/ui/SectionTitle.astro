---
const { sectionTitle, description } = Astro.props;
---

<div class="section-hidden">
  <div class="flex flex-col items-left gap-3 sm:flex-col">
    <h1 class="text-6xl md:text-7xl font-bold text-gray-600">
      {sectionTitle}
    </h1>
    <p class="w-auto text-center sm:text-left sm:w-[680px]">
      {description}
    </p>
  </div>
  <div
    class="flex flex-col items-left gap-3 sm:flex-col text-center sm:text-left"
  >
    <div class="text-center mt-5">
      <span class="inline-block w-1 h-1 rounded-full bg-green ml-1"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green ml-1"></span>
      <span class="inline-block w-40 h-1 rounded-full bg-green"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green ml-1"></span>
      <span class="inline-block w-1 h-1 rounded-full bg-green ml-1"></span>
    </div>
  </div>
</div>
