---
const { sectionTitle, description, link, textColor } = Astro.props;

const textCs = textColor || "text-dark";
---

<div class="">
  <div
    class="flex flex-col text-center lg:text-left gap-3 sm:flex-col intersect-once intersect:motion-delay-200 intersect:motion-preset-slide-right intersect:motion-duration-2000"
  >
    <h1 class={`text-4xl lg:text-6xl font-bold ${textCs}`}>
      {sectionTitle}
    </h1>
    <p class="w-auto">
      {
        (!link && <span class={textCs}>&nbsp;{description}</span>) || (
          <a href={link} class={textCs}>
            {description}
          </a>
        )
      }
    </p>
  </div>
