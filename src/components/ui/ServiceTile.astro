---
/* 
1. Gray card with green title and green on black icon 
2. Green card with gray title and green on black icon
3. Black card with gray title and gray on black icon
*/
import { Image } from "astro:assets";

const { index, titleTop, titleBottom, img, alt, link, painting, text } =
  Astro.props;
---

<div class=`h-full w-full`>
  <!--  <picture
    class="w-full h-full row-span-1 lg:order-none lg:row-span-1 flex justify-center items-center"
  >
    <Image
      src={painting}
      alt={alt}
      class="h-full w-full sm:h-full object-cover"
    />
  </picture> -->
  <div
    class="relative group duration-500 cursor-pointer group overflow-hidden text-gray-50 w-full h-full hover:duration-700 duration-700"
  >
    <div class="w-full h-full text-gray-800">
      <picture
        class="w-full h-full row-span-1 lg:order-none lg:row-span-1 flex justify-center items-center"
      >
        <Image
          src={painting}
          alt={alt}
          class="h-full w-full sm:h-full object-cover"
        />
      </picture>
      <div
        class="absolute group-hover:bg-green -bottom-1/3 w-full h-2/4 flex flex-col gap-1 group-hover:-bottom-0 duration-500 group-hover:animate-fadein"
      >
        <span class="text-dark font-bold text-4xl p-4">{titleTop}</span>
        <p
          class="text-neutral-800 hidden group-hover:block p-4 group-hover:animate-fadein"
        >
          {text}
        </p>
      </div>
    </div>
    <style>
      .custom-grid {
        grid-template: auto auto;
      }
    </style>
  </div>
</div>
