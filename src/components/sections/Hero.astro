const sectionClass = ` top-0
                      flex justify-center overflow-hidden lg:block 
                      min-h-screen
                      
                      `;
---

<script>
  const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

  $(document).ready(function () {
    var screenHeight = $(window).height();
    $(window).on("scroll", function () {
      //.05 is a multiplier for the font size
      //14 is the default font size
      $("#mainText").css(
        "font-size",
        Math.min(
          (isMobile && 16) || 160 + $(this).scrollTop() * (1 + 0.0001),
          1000
        )
      );
      // I need to hide the section if we scroll past the height of the screen
      if ($(this).scrollTop() > screenHeight) {
        $("#homeContainer").css("display", "none");
      } else {
        $("#homeContainer").css("display", "flex");
      }
    });
  });
</script>
<section id="home2" class={sectionClass}>
  <!-- style="background-image: url('/projet-gb/landscapes/landscape1.jpg');" -->

  <div
    class={`z-[-1] w-full fixed min-h-[40rem] lg:min-h-[100vh] flex justify-center items-center `}
    id="homeContainer"
  >
    <video class="block" autoplay loop muted playsinline id="myVideo">
      <source src="/public/video/anim.mp4" type="video/mp4" />
      <source src="/public/video/anim.webm" type="video/webm" />
    </video>
    <div
      class="backdrop-contrast-75 backdrop-hue-rotate-[45deg] absolute flex flex-col items-center h-full justify-center w-full"
    >
      <h6
        id="mainText"
        class="font-allenoire text-[1rem] lg:text-[10rem] font-light text-white motion-preset-fade-lg motion-duration-[2000ms]"
      >
        <!--  style={{
          background: "url('/public/video/anim_2k.gif')",
          "background-size": "cover",
          "-webkit-background-clip": "text",
          "-webkit-text-fill-color": "transparent",
        }} -->
        Artésémys
      </h6>
      <h6
        class="font-allenoire lg:text-[3rem] text-white text-center motion-preset-fade-lg motion-duration-[2000ms]"
      >
        Transformez votre équipe avec du coaching culturel
      </h6>
    </div>
  </div>
</section>

