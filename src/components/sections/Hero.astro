<section id="home2" class="min-h-screen w-full bg-purple overflow-hidden">
  <div
    class="fixed inset-0 flex items-center justify-center"
    id="homeContainer"
    style={{
      background:
        "linear-gradient(to top, #554194, #7e6eb0, #a79ccb, #d2cde5, #ffffff),linear-gradient(to top, #554194, #7e6eb0, #a79ccb, #d2cde5, #ffffff)",
    }}
  >
    <div
      class="z-[-1] grid grid-cols-2 lg:grid-cols-6 gap-6 lg:gap-12 bg-purple
      [mask-image:linear-gradient(to_top,_transparent_0%,rgba(85,65,131,1.0)_128px,rgba(85,65,131,0.5)_0%)]"
    >
      {
        Array.from({ length: 6 }).map((_, i) => (
          <div class={"relative overflow-hidden"}>
            <div
              class={i % 2 === 0 ? "animate-scroll-up" : "animate-scroll-down"}
            >
              {/* Duplicated content for seamless scrolling */}

              {shuffle(paintings).map((_, k) => (
                <div class={imgContainerClass}>
                  <Image src={_.src} alt={_.alt} class={sizeClass} priority />
                </div>
              ))}
            </div>
            <div
              aria-hidden="true"
              class={i % 2 === 0 ? "animate-scroll-up" : "animate-scroll-down"}
            >
              {/* Duplicated content for seamless scrolling */}

              {shuffle(paintings).map((_, k) => (
                <div class={imgContainerClass}>
                  <Image src={_.src} alt={_.alt} class={sizeClass} priority />
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div class="absolute flex flex-col items-center h-full justify-center w-full">
    <h6
      id="mainText"
      class="font-allenoire text-[3rem] lg:text-[10rem] font-light text-white"
    >
      <!--  style={{
          background: "url('/public/video/anim_2k.gif')",
          "background-size": "cover",
          "-webkit-background-clip": "text",
          "-webkit-text-fill-color": "transparent",
        }} -->
      Artésémys
    </h6>
    <h6
      class="font-allenoire text-[1rem] lg:text-[3rem] text-white text-center"
    >
      <strong>Transformez</strong> votre équipe avec du coaching culturel
    </h6>
  </div>
</section>

