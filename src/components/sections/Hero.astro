---
import { Image } from "astro:assets";
import auto3 from "../../assets/hero/jeunefile_auto.jpeg";
import auto1 from "../../assets/hero/joconde_auto.jpg";
import auto2 from "../../assets/hero/vangogh.jpeg";

const sizeClass = " w-screen h-full ";
const imgContainerClass = `my-12  bg-dark  ${sizeClass} image-slider`;
const imgClass = `object-cover   min-w-full ${sizeClass} `;
---

<script>
  $(function () {
    // Smallest size of columns is 14rem
    var hideTitle = () => {
      const top = window.scrollY;
      const height = window.innerHeight;
      console.log(top > height);

      if (top > height) {
        $("#mainText").css("display", "none");
      } else {
        $("#mainText").css("display", "flex");
      }
    };
    $(window).on("scroll", function () {
      //.05 is a multiplier for the font size
      //14 is the default font size
      hideTitle();
    });
    hideTitle();
  });
</script>
<section id="home2" class="min-h-screen w-full overflow-hidden">
  <div
    class="fixed inset-0 flex items-center justify-center"
    id="homeContainer"
  >
    <div id="background-grid" class="z-[-1] flex">
      <div class={imgContainerClass}>
        <Image class={imgClass} src={auto1} alt={"auto1"} loading={"eager"} />
        <Image class={imgClass} src={auto2} alt={"auto2"} loading={"eager"} />
        <Image class={imgClass} src={auto3} alt={"auto3"} loading={"eager"} />
      </div>
      <divs
        id="mainText"
        class="absolute top-0 flex flex-col items-center h-full w-full justify-center motion-preset-fade-lg motion-preset-blur-down motion-duration-2000"
      >
        <h6
          class="font-allenoire text-[4rem] lg:text-[10rem] font-light text-white"
        >
          Gaëtan Bros
        </h6>
        <h6 class="font-allenoire text-[1rem] lg:text-[3rem] text-white">
          Les séances d’art et d’histoire en entreprise
        </h6>
      </divs>
    </div>
  </div>
</section>
